    "next-offline": "^5.0.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-svg-inline": "^2.1.1",
    "react-toastify": "^9.1.1",
    "typescript": "^5.5.4",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@firebase/firestore-types": "^3.0.3",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
